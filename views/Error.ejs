AllUploads.ejs; <%- include ("includes/header", { "title": "All Uploads" }) %>

<div class="container" style="margin-top: 50px;">
    <h2>All Files Uploaded</h2>
    <div class="row">
        <% uploads.forEach(function (file) { %>
            <div class="col-md-4" style="margin-bottom: 30px;">
                <div class="card">
                    <div class="card-body">
                        <h5><%= file.fileName %></h5>
                        <p>Size: <%= file.fileSize %> bytes</p>
                        <p>Uploaded on: <%= new Date(file.uploadDate).toLocaleString() %></p>
                        <p>Description: <%= file.description %></p>
                        <a href="<%= request.mainURL %>/DownloadFile/<%= file._id %>" class="btn btn-primary">Download</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include ("includes/footer") %>
Admin.ejs; <img src="<%= request.mainURL %>/public/img/blur-admin-panel.png" style="width: 100%;" />
ResponseAlert.ejs; <div class="row">
    <div class="col-md-12">

        <% if (typeof request.status !== "undefined") { %>
            <% if (request.status == "success") { %>
                <div class="alert alert-success">
                    <%= request.message %>
                </div>
            <% }

            if (request.status == "error") { %>
                <div class="alert alert-danger">
                    <%= request.message %>
                </div>
        <% }
        } %>

        <% if (typeof request.session.status !== "undefined") { %>
            <% if (request.session.status == "success") { %>
                <div class="alert alert-success">
                    <%= request.session.message %>
                </div>
            <% }

            if (request.session.status == "error") { %>
                <div class="alert alert-danger">
                    <%= request.session.message %>
                </div>
        <% }
            delete request.session.status;
            delete request.session.message;
        }
        %>

    </div>
</div> 