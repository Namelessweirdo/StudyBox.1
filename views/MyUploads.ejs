<%- include("includes/header", {
"title": "My Uploads"
}) %>

<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
    <%- include("includes/ResponseAlert", {
    "request": request
    }) %>

    <div class="row">
        <div class="col-md-12">
            <h1>My Uploads</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right" style="margin-bottom: 20px;">
            <a href="javascript:void(0);" class="btn btn-primary" onclick="selectFileForUpload();">Upload File</a>
        </div>
    </div>

    <div class="row">
        <% if (uploaded.length > 0) { %>
            <% uploaded.forEach(function (singleFile) { %>
                <div class="col-md-4" style="margin-top: 30px;">
                    <div class="card">
                        <div class="card-body text-center" style="height: 300px;">
                            <i class="fa fa-file-text-o" style="font-size: 100px;"></i>
                        </div>
                        <div class="card-footer text-center">
                            <h5>
                                <%= singleFile.fileName %>
                            </h5>
                            <!-- View and Download buttons -->
                            <a href="<%= request.mainURL %>/ViewFile/<%= singleFile._id %>" class="btn btn-secondary">
                                View
                            </a>
                            <a href="<%= request.mainURL %>/DownloadFile/<%= singleFile._id %>" class="btn btn-primary">
                                Download
                            </a>
                            <!-- Share file button -->
                            <a href="javascript:void(0);" class="btn btn-info" onclick="openShareModal('<%= singleFile._id %>');">Share</a>
                            <!-- Delete button -->
                            <form action="<%= request.mainURL %>/DeleteFile" method="POST" style="display:inline;">
                                <input type="hidden" name="_id" value="<%= singleFile._id %>" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this file?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    No files uploaded yet. Start by uploading a file.
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Share file modal -->
<div id="shareModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="<%= request.mainURL %>/ShareFile" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Share File</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="fileId" id="fileIdToShare" />
                    <div class="form-group">
                        <label for="recipientEmail">Recipient Email:</label>
                        <input type="email" name="recipientEmail" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Share</button>
                </div>
            </form>
        </div>
    </div>
</div>

<form method="POST" action="<%= request.mainURL %>/UploadFile" enctype="multipart/form-data" id="form-upload-file">
    <input type="file" name="file" id="input-file-upload" style="display: none;" onchange="confirmUpload();" required />
</form>

<script>
    function selectFileForUpload() {
        document.getElementById("input-file-upload").click();
    }

    function confirmUpload() {
        swal({
            title: "Are you sure?",
            text: "Upload the selected file to the server?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then(function(isOkay) {
                if (isOkay) {
                    document.getElementById("form-upload-file").submit();
                }
            });
    }

    function openShareModal(fileId) {
        document.getElementById("fileIdToShare").value = fileId;
        $("#shareModal").modal('show');
    }
</script>

<%- include("includes/footer") %>
